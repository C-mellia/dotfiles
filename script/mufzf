#!/bin/bash

select=$(
find . -maxdepth 1 -not -path '*/.*' -type f -exec basename {} \;\
	| grep -E "\.pdf$|\.epub$"\
	| fzf -m --cycle\
	--bind ctrl-l:toggle\
	--bind ctrl-h:cancel
)

[[ -z $select ]] && exit 1

workspace=${1:-$(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name')}
i3-msg "workspace $workspace" > /dev/null || exit 1

while read -r file; do
    nohup zathura "$file"\
        &> /dev/null & disown || {
        echo "Failed to open '$file'" && continue
    }
done <<< "$select"

exit 0
