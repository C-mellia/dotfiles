#!/bin/bash

# refactor linking process into another function to be able to link to
# different targets
function do_link() {
    declare LD LD_FLAG TARGET srcs
    declare -a cmd

    local srcs="$*"
    local LD_FLAG=("$LD_FLAG")
    local cmd=("$LD" -o "$TARGET" "$(for file in $srcs; do printf " %s " target/"$file".o; done)" "${LD_FLAG[@]}")

    echo "${cmd[@]}"; eval "${cmd[@]}" || {
        printf "Failed to link target \"%s\"" "$TARGET" && exit 1
    }

    return 0
}

# select all the files with .o extension under the target/ directory
LD=gcc LD_FLAG='-lglut -lGL -lGLU' TARGET=main do_link\
    "$(find target/ -type f\
    | /bin/grep -E '\.o$'\
    | while read -r file; do
    file=$(basename "$file" .o)
    printf " %s " "$file"
done)"

exit 0
